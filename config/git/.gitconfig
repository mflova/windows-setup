[alias]
	co = checkout
	br = branch
	ci = commit
	st = status
	gitb = bisect
[difftool "sourcetree"]
	cmd = "'' "
[mergetool "sourcetree"]
	cmd = "'' "
	trustExitCode = true
[lfs]
	dialtimeout = 60
	concurrenttransfers = 1
	activitytimeout = 3600
[lfs "transfer"]
	maxretries = 5
[core]
	pager = delta
[interactive]
	diffFilter = delta --color-only
[delta]
	navigate = true
[merge]
	conflictStyle = zdiff3
[filter "lfs"]
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
[push]
	autoSetupRemote = true
[rebase]
	updateRefs = true
